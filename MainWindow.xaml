<Window x:Class="Flexi2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Flexi2.ViewModels"
        Title="FlexiPOS"
        Width="1280"
        Height="820"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Background="#0A0A12">
        <ContentControl Content="{Binding Nav.Current}"/>
    </Grid>
</Window>
