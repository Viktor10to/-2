<Window x:Class="Flexi2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Flexi2.ViewModels"
        xmlns:views="clr-namespace:Flexi2.Views"
        Title="Flexi2"
        WindowState="Maximized"
        Background="#0B0B0F">

    <Window.Resources>

        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:FloorPlanViewModel}">
            <views:FloorPlanView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OrderViewModel}">
            <views:OrderView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <views:AdminView/>
        </DataTemplate>

    </Window.Resources>

    <ContentControl Content="{Binding CurrentView}"/>

</Window>
