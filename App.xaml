<Application x:Class="Flexi2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             xmlns:vm="clr-namespace:Flexi2.ViewModels"
             xmlns:vmOrders="clr-namespace:Flexi2.ViewModels.Orders"
             xmlns:views="clr-namespace:Flexi2.Views">

    <Application.Resources>

        <!-- LOGIN -->
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>

        <!-- FLOOR PLAN -->
        <DataTemplate DataType="{x:Type vm:FloorPlanViewModel}">
            <views:FloorPlanView />
        </DataTemplate>

        <!-- ORDER -->
        <DataTemplate DataType="{x:Type vmOrders:OrderViewModel}">
            <views:OrderView />
        </DataTemplate>

        <!-- ADMIN -->
        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <views:AdminView />
        </DataTemplate>

    </Application.Resources>
</Application>
