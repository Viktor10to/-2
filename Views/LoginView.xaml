<UserControl x:Class="Flexi2.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0F">

    <Grid>
        <Border Background="#14141B"
                CornerRadius="25"
                Padding="35"
                Width="420"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel>

                <TextBlock Text="FLEXI2"
                           Foreground="#A855FF"
                           FontSize="34"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <!-- Tabs -->
                <Grid Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Content="POS"
                            Grid.Column="0"
                            Height="40"
                            Margin="0,0,6,0"
                            Command="{Binding SetPosModeCommand}"
                            Background="#7C3AED"
                            Foreground="White"
                            BorderThickness="0"/>

                    <Button Content="ADMIN"
                            Grid.Column="1"
                            Height="40"
                            Margin="6,0,0,0"
                            Command="{Binding SetAdminModeCommand}"
                            Background="#2563EB"
                            Foreground="White"
                            BorderThickness="0"/>
                </Grid>

                <TextBlock Text="{Binding ModeText}"
                           Foreground="#BDBDBD"
                           FontSize="14"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="{Binding MaskedPin}"
                           Foreground="White"
                           FontSize="28"
                           Margin="0,16"
                           HorizontalAlignment="Center"/>

                <!-- NUMPAD -->
                <UniformGrid Rows="4" Columns="3" Margin="0,10">

                    <Button Content="1" Command="{Binding AddDigitCommand}" CommandParameter="1" Margin="5"/>
                    <Button Content="2" Command="{Binding AddDigitCommand}" CommandParameter="2" Margin="5"/>
                    <Button Content="3" Command="{Binding AddDigitCommand}" CommandParameter="3" Margin="5"/>

                    <Button Content="4" Command="{Binding AddDigitCommand}" CommandParameter="4" Margin="5"/>
                    <Button Content="5" Command="{Binding AddDigitCommand}" CommandParameter="5" Margin="5"/>
                    <Button Content="6" Command="{Binding AddDigitCommand}" CommandParameter="6" Margin="5"/>

                    <Button Content="7" Command="{Binding AddDigitCommand}" CommandParameter="7" Margin="5"/>
                    <Button Content="8" Command="{Binding AddDigitCommand}" CommandParameter="8" Margin="5"/>
                    <Button Content="9" Command="{Binding AddDigitCommand}" CommandParameter="9" Margin="5"/>

                    <Button Content="C" Command="{Binding ClearCommand}" Margin="5"/>
                    <Button Content="0" Command="{Binding AddDigitCommand}" CommandParameter="0" Margin="5"/>
                    <Button Content="⌫" Command="{Binding BackspaceCommand}" Margin="5"/>

                </UniformGrid>

                <Button Content="ВХОД"
                        Height="46"
                        Margin="0,10,0,0"
                        Background="#A855FF"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Command="{Binding LoginCommand}"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
