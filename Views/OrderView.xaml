<UserControl x:Class="Flexi2.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0F">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ================== КАТЕГОРИИ ================== -->
        <Border Grid.Column="0"
                Background="#14141B"
                CornerRadius="18"
                Padding="16"
                Margin="0,0,12,0">

            <StackPanel>
                <TextBlock Text="Категории"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,14"/>

                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                                    Height="48"
                                    Margin="0,0,0,10"
                                    Background="#2A2A3A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Command="{Binding DataContext.SelectCategoryCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- ================== ПРОДУКТИ ================== -->
        <Border Grid.Column="1"
                Background="#14141B"
                CornerRadius="18"
                Padding="16"
                Margin="0,0,12,0">

            <StackPanel>
                <TextBlock Text="Продукти"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,14"/>

                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="150"
                                    Height="90"
                                    Margin="6"
                                    Background="#3A3A55"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.AddProductCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="16"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:F2} лв}"
                                               FontSize="14"
                                               Foreground="#A855FF"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- ================== СМЕТКА ================== -->
        <Border Grid.Column="2"
                Background="#14141B"
                CornerRadius="18"
                Padding="16">

            <DockPanel>

                <TextBlock Text="{Binding Title}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           DockPanel.Dock="Top"
                           Margin="0,0,0,12"/>

                <!-- РЕДОВЕ -->
                <ListBox ItemsSource="{Binding OrderItems}"
                         Background="#1B1B24"
                         BorderThickness="0"
                         Foreground="White"
                         Margin="0,0,0,12">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="6">
                                <TextBlock Text="{Binding Product.Name}"
                                           DockPanel.Dock="Left"/>
                                <TextBlock Text="{Binding Qty, StringFormat=x{0}}"
                                           DockPanel.Dock="Right"
                                           Margin="8,0"/>
                                <TextBlock Text="{Binding Total, StringFormat={}{0:F2} лв}"
                                           DockPanel.Dock="Right"
                                           Margin="12,0"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- СУМИ -->
                <StackPanel DockPanel.Dock="Bottom">

                    <TextBlock Text="{Binding Subtotal, StringFormat=Междинно: {0:F2} лв}"
                               Foreground="#CCCCCC"
                               Margin="0,0,0,6"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Отстъпка %"
                                   Foreground="#CCCCCC"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBox Width="60"
                                 Text="{Binding DiscountPercent, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#2A2A3A"
                                 Foreground="White"
                                 BorderThickness="0"/>
                    </StackPanel>

                    <TextBlock Text="{Binding FinalTotal, StringFormat=Общо: {0:F2} лв}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,12"/>

                    <!-- БУТОНИ -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">

                        <Button Content="⬅ Назад"
                                Margin="4"
                                Padding="16,8"
                                Command="{Binding BackCommand}"/>

                        <Button Content="🧾 Поръчай"
                                Margin="4"
                                Padding="16,8"
                                Background="#2563EB"
                                Foreground="White"
                                Command="{Binding SubmitOrderCommand}"/>

                        <Button Content="💳 Приключи"
                                Margin="4"
                                Padding="16,8"
                                Background="#DC2626"
                                Foreground="White"
                                Command="{Binding CloseBillCommand}"/>
                    </StackPanel>

                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>
</UserControl>
