<UserControl x:Class="Flexi2.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Flexi2.Converters"
             Background="#0B0B0F">

    <UserControl.Resources>
        <conv:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= КАТЕГОРИИ ================= -->
        <Border Grid.Column="0"
                Background="#15151D"
                CornerRadius="20"
                Padding="15"
                Margin="0,0,10,0">

            <StackPanel>
                <TextBlock Text="Категории"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                                    Height="50"
                                    Margin="0,0,0,10"
                                    FontSize="16"
                                    Background="#2A2A3A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.SelectCategoryCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- ================= ПРОДУКТИ ================= -->
        <Border Grid.Column="1"
                Background="#15151D"
                CornerRadius="20"
                Padding="15"
                Margin="0,0,10,0">

            <StackPanel>
                <TextBlock Text="Продукти"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="140"
                                    Height="80"
                                    Margin="5"
                                    Background="#3A3A55"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.AddProductCommand,
                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="16"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:F2} лв}"
                                               FontSize="14"
                                               Foreground="#A855FF"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- ================= СМЕТКА ================= -->
        <Border Grid.Column="2"
                Background="#15151D"
                CornerRadius="20"
                Padding="15">

            <DockPanel>

                <TextBlock Text="Сметка"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           DockPanel.Dock="Top"
                           Margin="0,0,0,15"/>

                <!-- РЕДОВЕ -->
                <ItemsControl ItemsSource="{Binding OrderItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,8"
                                  Opacity="{Binding IsLocked,
                                                    Converter={StaticResource BooleanToOpacityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Product.Name}"
                                           Foreground="White"/>

                                <TextBlock Grid.Column="1"
                                           Text="x"
                                           Foreground="#888"
                                           Margin="6,0"/>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding Qty}"
                                           Foreground="White"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- ДОЛНА ЧАСТ -->
                <StackPanel DockPanel.Dock="Bottom" Margin="0,20,0,0">

                    <!-- ОТСТЪПКА -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Отстъпка (%)"
                                   Foreground="#CCCCCC"
                                   FontSize="14"/>

                        <TextBox Text="{Binding DiscountPercent,
                                                UpdateSourceTrigger=PropertyChanged}"
                                 Height="32"
                                 Background="#2A2A3A"
                                 Foreground="White"
                                 BorderThickness="0"/>

                        <TextBlock Text="{Binding DiscountAmount,
                                                  StringFormat=Отстъпка: -{0:F2} лв}"
                                   Foreground="#FBBF24"
                                   Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- КРАЙНА СУМА -->
                    <TextBlock Text="{Binding FinalTotal,
                                              StringFormat=Крайна сума: {0:F2} лв}"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <!-- ПОРЪЧАЙ -->
                    <Button Content="🧾 ПОРЪЧАЙ"
                            Height="45"
                            Background="#7C3AED"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,0,0,10"
                            Command="{Binding SubmitOrderCommand}"/>

                    <!-- ПРИКЛЮЧИ -->
                    <Button Content="💳 Приключи сметка"
                            Height="45"
                            Background="#DC2626"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,0,0,10"
                            Command="{Binding CloseBillCommand}"/>

                    <!-- НАЗАД -->
                    <Button Content="⬅ Назад към масите"
                            Height="40"
                            Background="#2A2A3A"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding BackCommand}"/>

                </StackPanel>
            </DockPanel>
        </Border>

    </Grid>
</UserControl>
