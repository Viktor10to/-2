<UserControl x:Class="Flexi2.Views.Orders.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0B0B0F">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- КАТЕГОРИИ -->
        <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="14" Margin="8">
            <StackPanel Margin="12">
                <TextBlock Text="Категории" Foreground="White" FontSize="22" Margin="0,0,0,12"/>
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                                    Height="55"
                                    Margin="4"
                                    FontSize="18"
                                    Command="{Binding DataContext.SelectCategoryCommand,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- ПРОДУКТИ -->
        <Border Grid.Column="1" Background="#222222" CornerRadius="14" Margin="8">
            <StackPanel Margin="12">
                <TextBlock Text="Продукти" Foreground="White" FontSize="22" Margin="0,0,0,12"/>

                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Margin="6"
                                    Height="90"
                                    Command="{Binding DataContext.AddProductCommand,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="18" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:F2} лв}"
                                               FontSize="14" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- СМЕТКА -->
        <Border Grid.Column="2" Background="#1A1A1A" CornerRadius="14" Margin="8">
            <StackPanel Margin="12">
                <TextBlock Text="Сметка" Foreground="White" FontSize="22" Margin="0,0,0,12"/>

                <ItemsControl ItemsSource="{Binding OrderItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Foreground="White"
                                       Text="{Binding Product.Name}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Foreground="White"
                           FontSize="18"
                           Margin="0,20,0,0"
                           Text="{Binding Total, StringFormat=Общо: {0:F2} лв}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
