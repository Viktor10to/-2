<UserControl x:Class="Flexi2.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#0A0A12">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="#121225" BorderThickness="0,0,0,2" BorderBrush="#00E5FF">
            <Grid Margin="18,0">
                <TextBlock Text="{Binding Category.Name}" Foreground="#00FF9C" FontSize="20" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="BACK" Command="{Binding BackCommand}" Width="120" Margin="0,0,12,0"/>
                    <Button Content="LOGOUT" Command="{Binding LogoutCommand}" Width="120"/>
                </StackPanel>
            </Grid>
        </Border>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Products}"
                 Margin="20">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#181833" CornerRadius="14" BorderThickness="2" BorderBrush="#B400FF" Padding="14" Margin="0,0,0,10">
                        <DockPanel>
                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="16" DockPanel.Dock="Left"/>
                            <TextBlock Text="{Binding Price, StringFormat={}{0:0.00} лв}" Foreground="#00FF9C" FontSize="16" DockPanel.Dock="Right"/>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
